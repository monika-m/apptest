<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeMidnight" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">#9c27b0</item>
        <item name="colorPrimaryDark">#9c27b0</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#212121</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ButtonTheme" parent="@android:style/Widget.DeviceDefault.ActionButton">
        <item name="android:background">#d1c4e9</item>
    </style>

    <style name="AppThemeMidnight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeMidnight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeMidnight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
